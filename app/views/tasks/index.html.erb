<h1>All Tasks</h1>

<table class="table">
  <thead>
  <tr>
    <th scope="col"><%= Task.human_attribute_name(:name) %></th>
    <th scope="col"><%= Task.human_attribute_name(:created_at) %></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= link_to task.name, task %>
      </td>
      <td><%= task.created_at %></td>
      <td>
        <%= link_to 'Edit', edit_task_path(task) %>
      </td>
      <td>
        <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Create task', new_task_path, class: 'btn btn-primary' %>